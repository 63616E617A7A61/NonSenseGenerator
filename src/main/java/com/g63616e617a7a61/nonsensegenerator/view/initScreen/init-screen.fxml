<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="main" fx:id="main" prefHeight="600.0" prefWidth="800.0" maxWidth="1200" stylesheets="@init-screen.css" fx:controller="com.g63616e617a7a61.nonsensegenerator.view.Controller" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
         <VBox id="mainCenter">
            <children>
                <VBox id="titleSect" fx:id="titleSect">
                    <children>
                        <Label id="title" text="Welcome back! It's time to create!" />
                        <Label text="Are you ready to craft a new sentence?&#10;Write what you want and discover the fantastic result we offer to you!" />
                    </children>
                </VBox>
                <VBox id="sentenceCardSect" fx:id="sentenceCardSect">
                    <children>
                        <!-- generated sentence cards will go here -->
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox id="inputSect">
            <children>
                <HBox>
                    <children>
                        <TextField fx:id="sentenceInput" promptText="Write your sentence here..." />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="Generate" id="generateBtn" fx:id="generateBtn" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
